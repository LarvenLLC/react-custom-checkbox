{
  "name": "react-custom-checkbox",
  "version": "3.1.5",
  "description": "A simple and fully customizable React checkbox input component.",
  "author": "Adam 'BossBele' Beleko",
  "license": "MIT",
  "repository": "LarvenLLC/react-custom-checkbox",
  "bugs": {
    "url": "https://github.com/LarvenLLC/react-custom-checkbox/issues"
  },
  "homepage": "https://larvenllc.github.io/react-custom-checkbox/",
  "keywords": [
    "react",
    "custom",
    "checkbox",
    "input",
    "check",
    "js",
    "radio",
    "larven"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "npm run build:dist && npm run build:switch",
    "build:dist": "microbundle-crl --no-compress --format modern,cjs",
    "build:switch": "microbundle-crl src/switch.js -o switch/index.js --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "start:switch": "microbundle-crl watch src/switch.js -o switch/index.js --no-compress --format modern,cjs",
    "prepublish": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^4.0.3"
  },
  "files": [
    "dist",
    "switch"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./switch": "./switch/index.js"
  }
}